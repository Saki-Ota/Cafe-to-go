<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 justify-centre">
      <h1>Edit <%= @product.name %></h1>
      <div class="card" style="width: 100%;">
        <%= simple_form_for [ @cafe, @product ], url: cafe_product_path do |f| %>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= f.input :name %></li>
          <li class="list-group-item"><%= f.input :price %></li>
          <li class="list-group-item"><%= f.input :description %></li>
          <%= f.submit "Update Details", :class => "btn button_general"%>
        </ul>
          <% end %>
      </div>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
