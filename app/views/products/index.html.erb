<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
    <br style="padding-top: 50px">
      <% @products.each do |product| %>
        <div class="card-product">
          <img src="https://source.unsplash.com/random/300x300?<%= product.name%>" />
          <div class="card-product-infos">
            <h2><%= link_to product.name,  cafe_product_path(product.cafe_id, product) %></h2>
            <p>$<%= product.price %></p>
            <p><%= product.description %></p>
            <a href="<%= carts_path %>" class="btn btn-primary">Add to cart</a>
          </div>
        </div><br>
      <% end %>
    </div>
  </div>
</div>
