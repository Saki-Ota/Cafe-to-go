<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 justify-centre">
      <h1>Edit <%= @cafe.name %></h1>
      <%= simple_form_for(@cafe) do |f| %>
          <%= f.input :name %> <br>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.submit %>
        <% end %>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
