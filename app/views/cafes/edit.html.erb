<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 justify-centre">
    <h1>Edit <%= @cafe.name %></h1>
      <div class="card" style="width: 100%;">
          <%= simple_form_for(@cafe) do |f| %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= f.input :name %> </li>
            <li class="list-group-item"><%= f.input :address,
          input_html: { data: { geocoder_target: "address" }, class: "d-none" },
          wrapper_html: { data: { controller: "geocoder",
          geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %></li>
            <li class="list-group-item"><%= f.input :description %></li>
            <%= f.submit "Update Details", :class => "btn button_general"%>
          </ul>
          <% end %>
       </div>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
